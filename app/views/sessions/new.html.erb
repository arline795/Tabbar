<center><h1>Seller Login</h1></center>
<div class="container">
  <div class=“row”>
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-primary">
        <div class="panel-body">
          <%= simple_form_for :sessions, :url => login_path do |f| %>
            <%= f.input :email %>
            <%= f.input :password %><%= link_to "(forgot password)", new_password_reset_path %>
            <%= f.input :remember_me, :as => :boolean %>
            <%= f.button :submit, "Log In", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>    
    </div>
  </div>
</div>

